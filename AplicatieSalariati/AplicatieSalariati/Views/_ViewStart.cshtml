@{
    string cLayout = "";
    if (Request.IsAuthenticated)
    {

        //var roles = Roles.GetAllRoles();
        if (HttpContext.Current.User.IsInRole("SuperUser"))
        {
            cLayout = "~/Views/Shared/_Dizertatie/_LayoutSuperUser.cshtml";
        }
        else if (HttpContext.Current.User.IsInRole("Admin"))
        {
            cLayout = "~/Views/Shared/_LayoutAdministrator.cshtml";
        }
        else if (HttpContext.Current.User.IsInRole("Manager"))
        {
            cLayout = "~/Views/Shared/_LayoutManager.cshtml";
        }
        else if (HttpContext.Current.User.IsInRole("Angajat"))
        {
            cLayout = "~/Views/Shared/_LayoutAngajat.cshtml";
        }
        else if (HttpContext.Current.User.IsInRole("Medic"))
        {
            cLayout = "~/Views/Shared/_Dizertatie/_LayoutMedic.cshtml";
        }
    }
    else
    {
        cLayout = "~/Views/Shared/_LayoutLoggedOff.cshtml";
    }
    Layout = cLayout;
}
